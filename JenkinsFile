pipeline {
    agent any
    stages {
        stage('Setup') {
            steps {
                echo 'Setup'
                
            }
        }
        stage('Build') {
            steps {
                echo 'Build'
                
            }
        }
        stage('Test') {
            steps {
                echo 'Test'
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    echo 'Test failed, but marking build as unstable'
                    sh "exit 1"
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
    }
}
